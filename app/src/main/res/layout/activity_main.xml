<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context="com.studios.truhbel.forthearts.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_studio_acc"
        android:layout_width="@dimen/main_activity_cv_width"
        android:layout_height="@dimen/main_activity_cv_height"
        android:layout_marginTop="@dimen/cv_margin_top"
        android:layout_marginLeft="@dimen/cv_margin_left"
        app:cardCornerRadius="15dp"
        >

        <TextView
            android:id="@+id/tv_create_studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/string_sz"
            android:text="@string/create_studio" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/cv_studio_acc"
        android:id="@+id/cv_user_acc"
        android:layout_width="@dimen/main_activity_cv_width"
        android:layout_height="@dimen/main_activity_cv_height"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/cv_margin_left"
        app:cardCornerRadius="15dp"
        >

        <TextView
            android:id="@+id/tv_create_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/string_sz"
            android:text="@string/create_user" />

    </android.support.v7.widget.CardView>



</RelativeLayout>
